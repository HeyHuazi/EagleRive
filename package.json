{
  "name": "eagle-plugin-rive",
  "version": "1.0.1",
  "description": "Eagle format extension plugin for Rive files (.riv and .rev)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint viewer/js/*.js js/rive-util.js thumbnail/riv.js",
    "lint:fix": "eslint viewer/js/*.js js/rive-util.js thumbnail/riv.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,md,json}\"",
    "version": "node scripts/version.js",
    "version:patch": "npm version patch && node scripts/version.js",
    "version:minor": "npm version minor && node scripts/version.js",
    "version:major": "npm version major && node scripts/version.js",
    "postinstall": "node scripts/copy-rive-runtime.js",
    "release": "node scripts/release.js",
    "release:patch": "npm version patch && node scripts/version.js && npm run release",
    "release:minor": "npm version minor && node scripts/version.js && npm run release",
    "release:major": "npm version major && node scripts/version.js && npm run release",
    "build": "node scripts/build.js",
    "dev": "vite",
    "prebuild": "npm run lint",
    "prepare": "husky"
  },
  "keywords": [
    "eagle",
    "plugin",
    "rive",
    "animation",
    "preview"
  ],
  "author": "Huazi",
  "license": "MIT",
  "lint-staged": {
    "*.{js,css,html,md,json}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@rive-app/webgl2": "^2.35.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "terser": "^5.46.0",
    "vite": "^7.3.1"
  },
  "resolutions": {
    "@rive-app/webgl2": "2.35.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "js/**/*.js",
      "viewer/js/**/*.js",
      "thumbnail/**/*.js",
      "!**/node_modules/**",
      "!dist/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
