{
  "name": "eagle-plugin-rive",
  "version": "3.0.0",
  "description": "Eagle format extension plugin for Rive files (.riv and .rev)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint viewer/js/*.js js/rive-util.js thumbnail/riv.js",
    "lint:fix": "eslint viewer/js/*.js js/rive-util.js thumbnail/riv.js --fix"
  },
  "keywords": [
    "eagle",
    "plugin",
    "rive",
    "animation",
    "preview"
  ],
  "author": "Huazi",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "resolutions": {
    "@rive-app/webgl2": "2.35.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "js/**/*.js",
      "viewer/js/**/*.js",
      "thumbnail/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
